                  <option value="cup">Cup</option>
                  <option value="tablespoon">Tablespoon</option>
                </select>
              </div>
              <div class="col-auto">
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    id="autoSizingCheck"
                  />
