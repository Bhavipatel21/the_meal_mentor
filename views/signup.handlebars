<div class="row">
    <!-- Login/Signup Form -->
    <div class="col-md-12">
        <h2>Sign Up</h2>
        <form class="form signup-form">
            <div class="mb-3">
                <label for="email-signup" class="form-label">Email address:
                </label>
                <input type="email" class="form-input" id="email-signup" aria-describedby="emailInput" />
                <div id="emailHelp" class="form-text">
                    We'll never share your email with anyone else.
                </div>
            </div>
            <div class="mb-3">
                <label for="password-signup" class="form-label">Password:
                </label>
                <input type="password" class="form-input" id="password-signup" />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<script src="./js/signup.js"></script>